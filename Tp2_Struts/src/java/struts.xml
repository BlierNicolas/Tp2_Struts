<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <action name="index">
            <result>/login.jsp</result>
        </action>
        <action name="Register" class="com.projet.actions.Registration">
            <result>/login.jsp</result>
            <result name="input">/register.jsp</result>
        </action>         
        <action name="ListLivre" method="list" class="com.projet.actions.BookAction">
            <result>/list.jsp</result>
            <result name="input">/login.jsp</result>
        </action>
        <action name="ListExemplaire" method="list" class="com.projet.actions.ExemplaireAction">
            <result>/list.jsp</result>
            <result name="input">/login.jsp</result>
        </action>
    <action name="AddLivre" method="add" class="com.projet.actions.BookAction">
            <result>/add.jsp</result>
        </action>
        <action name="AddExemplaire" method="addExemplaire" class="com.projet.actions.ExemplaireAction">
            <result>/addExemplaire.jsp</result>
        </action>
        <action name="Evaluer" method="evaluer" class="com.projet.actions.BookAction">
            <result>/comments.jsp</result>
        </action>
        <action name="Evaluercours" method="evaluercours" class="com.projet.actions.BookAction">
            <result>/comments.jsp</result>
        </action>
    </package>

    <include file="connexion.xml"/>

    <!-- Add packages here -->

</struts>
